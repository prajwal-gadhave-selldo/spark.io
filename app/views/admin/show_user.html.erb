<div class="container-fluid">
  <div class="card">
    <div class="card-body">
      <h2 class="card-title">User Details</h2>

      <div class="row mt-4">
        <div class="col-md-6">
          <h4>Basic Information</h4>
          <p><strong>Name:</strong> <%= @user.name %></p>
          <p><strong>Email:</strong> <%= @user.email %></p>
          <p><strong>Role:</strong> <%= @user.role %></p>
          <p><strong>Member since:</strong> <%= @user.created_at.strftime("%B %d, %Y") %></p>
        </div>

        <div class="col-md-6">
          <h4>Activity Summary</h4>
          <p><strong>Total Blogs:</strong> <%= @user.total_blogs %></p>
          <p><strong>Total Comments:</strong> <%= @user.total_comments %></p>
          <p><strong>Total Likes:</strong> <%= @user.total_likes %></p>
        </div>
      </div>

      <div class="mt-4">
        <%= link_to 'Edit User', edit_admin_user_path(@user), class: 'btn btn-primary' %>
        <%= link_to 'View Activity', admin_user_activity_path(@user), class: 'btn btn-info' %>
        <%= link_to 'Back to Users', admin_users_path, class: 'btn btn-outline-secondary' %>
      </div>
    </div>
  </div>
</div>