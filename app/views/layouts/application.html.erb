<!DOCTYPE html>
<html>

<head>
  <title>Spark.io</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application" %>
  <%= javascript_importmap_tags %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body class="bg-light min-vh-100">
  <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
    <div class="container">
      <div class="d-flex justify-content-between w-100">
        <div class="navbar-brand">
          <%= link_to root_path, class: 'fs-4 fw-semibold text-black text-decoration-none' do %>
          <span>Spark.io</span>
          <% end %>
        </div>
        <div class="d-flex align-items-center">
          <% if @current_user.class != String %>
          <span class="me-3"><%= @current_user.name %></span>
          <%= button_to 'Logout', logout_path, method: :delete, 
                class: 'btn btn-danger' %>
          <% else %>
          <%= link_to 'Login', login_path, class: 'btn btn-primary me-2' %>
          <% end %>
        </div>
      </div>
    </div>
  </nav>

  <% if notice %>
  <div class="container mt-4">
    <div class="alert alert-success alert-dismissible fade show">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
  <% end %>

  <main class="container mt-4">
    <%= yield %>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>